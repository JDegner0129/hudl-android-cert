<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:layout_gravity="center"
    android:layout_margin="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/favorite_item_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_hudllogo"
            />

        <TextView
            android:id="@+id/favorite_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favorite_item_image"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="@string/item_title" />

        <TextView
            android:id="@+id/favorite_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favorite_item_title"
            android:layout_marginLeft="10dp"
            android:text="@string/item_author" />

    </RelativeLayout>

</android.support.v7.widget.CardView>